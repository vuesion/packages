{
  "name": "@vuesion/packages",
  "private": true,
  "scripts": {
    "postinstall": "lerna bootstrap",
    "build": "lerna run build",
    "test": "jest --coverage",
    "lint": "tslint -c tslint.json './packages/**/src/**/*.ts'",
    "preversion": "npm run build",
    "release:patch": "lerna version patch --force-publish && lerna publish from-git",
    "release:minor": "lerna version minor --force-publish && lerna publish from-git",
    "release:major": "lerna version major --force-publish && lerna publish from-git"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/jest": "^24.0.11",
    "husky": "^2.1.0",
    "jest": "^24.7.1",
    "lerna": "^3.13.4",
    "prettier": "^1.17.0",
    "pretty-quick": "^1.10.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.4.5"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged && npm run lint && npm run test"
    }
  },
  "jest": {
    "globals": {
      "window": true
    },
    "rootDir": ".",
    "roots": [
      "<rootDir>/packages"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/tmp/",
      "/template/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tmp/",
      "/template/"
    ],
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "html",
      "text",
      "lcov",
      "json"
    ],
    "preset": "ts-jest",
    "testMatch": null
  }
}
