{
  "name": "@vuesion/packages",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/vuesion/packages.git"
  },
  "author": "Johannes Werner <johannes.werner86@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/vuesion/packages",
  "bugs": {
    "url": "https://github.com/vuesion/packages/issues"
  },
  "scripts": {
    "postinstall": "lerna bootstrap",
    "predev": "lerna bootstrap && npm run build",
    "dev": "lerna run dev --parallel",
    "build": "lerna run build",
    "clean": "lerna run clean && lerna clean",
    "test": "jest --coverage",
    "pree2e": "lerna bootstrap && npm run build",
    "e2e": "lerna run e2e",
    "lint": "eslint . --ext ts,vue --fix --cache",
    "release": "ts-node ./scripts/release.ts",
    "prettier": "prettier --config .prettierrc --ignore-path .prettierignore ./packages/**/*.{ts,js}"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/glob": "^7.1.1",
    "@types/jest": "^25.1.4",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-vue": "^6.2.2",
    "generate-changelog": "^1.8.0",
    "glob": "^7.1.6",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lerna": "^3.20.2",
    "prettier": "^2.0.1",
    "pretty-quick": "^2.0.1",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged && npm run lint && npm run test"
    }
  },
  "jest": {
    "globals": {
      "window": true
    },
    "rootDir": ".",
    "roots": [
      "<rootDir>/packages"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/tmp/",
      "/template/",
      "/dist/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tmp/",
      "/template/"
    ],
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "html",
      "text",
      "lcov",
      "json"
    ],
    "preset": "ts-jest",
    "testMatch": null
  }
}
